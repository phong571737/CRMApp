<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E5EDFF" /> <!-- nền hơi xanh khi nhấn -->
            <corners android:radius="999dp" />
            <stroke
                android:width="1dp"
                android:color="#2563EB" />
        </shape>
    </item>

    <!-- normal -->
    <item>
        <shape>
            <solid android:color="#FFFFFFFF" /> <!-- nền trắng -->
            <corners android:radius="999dp" />
            <stroke
                android:width="1dp"
                android:color="#2563EB" />
        </shape>
    </item>

</selector>
