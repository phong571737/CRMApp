<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <!-- ScrollView chứa toàn bộ form -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header với nút back -->
            <LinearLayout
                android:id="@+id/chitietnguoilienhe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:id="@+id/chitietnguoilienhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chitietnguoilienhe"
                    android:textSize="@dimen/text_large"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Contact -->
            <LinearLayout
                android:id="@+id/nguoilienhe_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex3"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ic_contact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_contact" />

                <TextView
                    android:id="@+id/tennguoilienhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_large"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- SDT + Email  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_basex3">

                <!-- Số điện thoại -->
                <LinearLayout
                    android:id="@+id/sdt_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/sodienthoai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_small"
                        android:layout_marginStart="8dp" />

                    <ImageView
                        android:id="@+id/ic_phone"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_call" />
                </LinearLayout>

                <!-- Email -->
                <LinearLayout
                    android:id="@+id/email_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:text="Email"
                        android:textSize="@dimen/text_small"
                        android:layout_marginStart="48dp"/>

                    <ImageView
                        android:id="@+id/ic_mail"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_mail" />
                </LinearLayout>
            </LinearLayout>

            <!-- Công ty -->
            <TextView
                android:id="@+id/rowcongty"
                android:layout_marginTop="@dimen/margin_basex3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="@string/congty"
                android:layout_marginStart="8dp"/>

            <!-- Người tạo , người phụ trách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_basex3">

            <!-- Người tạo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/ic_face"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_face" />

                <!-- Phần thông tin người tạo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/nguoitao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nguoitao"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tennguoitao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Thị Tú Vân"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Người phụ trách -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/ic_face2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_face2" />

                <!-- Phần thông tin người phụ trách-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/nguoiphutrach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nguoiphutrach"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/tennguoiphutrach"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Minh Hà"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <!-- Submenu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/tongquan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/tongquan"
                    android:textColor="@color/blue"
                    android:gravity="center"
                    android:background="@drawable/edittext_line"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/chitiet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/chitiet"
                    android:gravity="center"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/nhatky"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/nhatky"
                    android:gravity="center"
                    android:textSize="@dimen/text_small" />

                <TextView
                    android:id="@+id/cohoi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cohoi"
                    android:gravity="center"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>

            <!-- Block Thông tin chung -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinchung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinchung"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_basex2"/>

                <!-- Họ và tên đệm -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/hovatendem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/hovatendem"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillhovatendem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="Trần Ngọc Diễm"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Tên-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tên"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillten"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="My"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Ngày sinh-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ngaysinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ngaysinh"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillngaysinh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="19/02/1994"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Công ty-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/congty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ngaysinh"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillcongty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="Công ty TNHH Vạn Phát"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Điện thoại-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/dienthoai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ngaysinh"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/filldienthoai"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="0000000000000"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/email"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillemail"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="vi.phan@gmal.com"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>


            <!-- Block Thông tin địa chỉ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtindiachi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtindiachi"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_basex2"/>

                <!-- diachi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/diachi"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/hovatendem"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/filldiachi"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="442 Lê Quang Định"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Quận/Huyện-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/quanhuyen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/quan"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillquanhuyen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="Gò Vấp"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Tỉnh/TP-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/tinhtp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tinh"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/filltinhtp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="80dp"
                        android:text="TPHCM"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Block Thông tin mô tả -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinmota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinmota"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_basex2"/>

                <!-- mota -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/mota"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/mota"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillmota"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minLines="3"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim ve..."
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Ghi chú đặc biệt-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/ghichu"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/ghichu"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillghichu"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:minLines="3"
                        android:layout_weight="1"
                        android:layout_marginStart="0dp"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. "
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Block Thông tin mua hàng -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinmuahang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinmuahang"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_basex2"/>

                <!-- Trình trạng mua hàng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/tinhtrangmuahang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/tinhtrangmuahang"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/filltinhtrangmuahang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đã mua"
                        android:layout_marginStart="60dp"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Số đơn hàng đã mua -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/sodonhang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/sodonhangdamua"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillsodonhang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="60dp"
                        android:text="2"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>
            </LinearLayout>

            <!-- Block Thông tin quản lý -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/margin_basex3">

                <TextView
                    android:id="@+id/thongtinquanly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/thongtinmuahang"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/margin_basex2"/>

                <!-- Giao cho -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/giaocho"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao cho"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillgiaocho"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Nguyễn Minh Hà"
                        android:layout_marginStart="60dp"
                        android:textSize="@dimen/text_small" />
                </LinearLayout>

                <!-- Người phụ trách -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="@dimen/margin_basex3">

                    <TextView
                        android:id="@+id/tv_nguoiphutrach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/nguoiphutrach"
                        android:textColor="@color/grey"
                        android:textSize="@dimen/text_small" />

                    <TextView
                        android:id="@+id/fillnguoiphutrach"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
