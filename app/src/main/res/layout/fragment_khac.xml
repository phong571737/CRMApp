<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/so_screen_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ========== Thông tin hợp đồng ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header -->
                <TextView
                    android:id="@+id/tvHeaderHopDong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin hợp đồng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <!-- Rows -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Số hợp đồng"/>
                        <TextView
                            android:id="@+id/tvSoHopDong"
                            style="@style/SoInfoValue"
                            android:text="C016429-5"/>
                    </LinearLayout>
                    <View style="@style/SoDivider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Ngày chốt dự kiến"/>
                        <TextView
                            android:id="@+id/tvNgayChotDuKy"
                            style="@style/SoInfoValue"
                            android:text="30/07/2024"/>
                    </LinearLayout>
                    <View style="@style/SoDivider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Ngày khách hàng ký"/>
                        <TextView
                            android:id="@+id/tvNgayKhachHangKy"
                            style="@style/SoInfoValue"
                            android:text="30/07/2024"/>
                    </LinearLayout>
                    <View style="@style/SoDivider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Trạng thái"/>
                        <TextView
                            android:id="@+id/tvTrangThaiHopDong"
                            style="@style/SoInfoValue"
                            android:text="Đã xong"/>
                    </LinearLayout>
                    <View style="@style/SoDivider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Đã nhận lại HĐ"/>
                        <TextView
                            android:id="@+id/tvDaNhanLaiHD"
                            style="@style/SoInfoValue"
                            android:text="Không"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== Thông tin liên quan ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin liên quan"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Cơ hội"/>
                        <TextView
                            android:id="@+id/tvCoHoi"
                            style="@style/SoInfoLink"
                            android:text="Công ty CloudSO - Khẩn"/>
                    </LinearLayout>
                    <View style="@style/SoDivider"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingVertical="6dp">
                        <TextView
                            style="@style/SoInfoLabel"
                            android:text="Báo giá"/>
                        <TextView
                            android:id="@+id/tvBaoGia"
                            style="@style/SoInfoLink"
                            android:text="Công ty CloudSO - 4th item CloudSale"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== Thông tin hoa hồng ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin hoa hồng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        style="@style/SoInfoLabel"
                        android:text="Tình trạng hóa đơn"/>
                    <TextView
                        android:id="@+id/tvTinhTrangHoaDon"
                        style="@style/SoInfoValue"
                        android:text="Tạo nháp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== Điều khoản & Điều kiện ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Điều khoản &amp; Điều kiện"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:id="@+id/tvDieuKhoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..."
                    android:ellipsize="end"
                    android:maxLines="3"/>

                <TextView
                    android:id="@+id/tvXemThemDieuKhoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textStyle="bold"
                    android:textColor="#1A73E8"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== Thông tin mô tả ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin mô tả"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <TextView
                    android:id="@+id/tvThongTinMoTa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả đơn hàng: Lorem ipsum dolor sit amet..."
                    android:ellipsize="end"
                    android:maxLines="3"/>

                <TextView
                    android:id="@+id/tvXemThemMoTa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textStyle="bold"
                    android:textColor="#1A73E8"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== Thông tin quản lý ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin quản lý"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        style="@style/SoInfoLabel"
                        android:text="Giao cho"/>
                    <TextView
                        android:id="@+id/tvGiaoCho"
                        style="@style/SoInfoValue"
                        android:text="Nguyễn Minh Hà"/>
                </LinearLayout>
                <View style="@style/SoDivider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        style="@style/SoInfoLabel"
                        android:text="Ngày hẹn"/>
                    <TextView
                        android:id="@+id/tvNgayHen"
                        style="@style/SoInfoValue"
                        android:text="30/07/2024 09:56"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== Thông tin hệ thống ========== -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeColor="#E8EBF1"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin hệ thống"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:paddingBottom="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        style="@style/SoInfoLabel"
                        android:text="Ngày tạo"/>
                    <TextView
                        android:id="@+id/tvNgayTao"
                        style="@style/SoInfoValue"
                        android:text="30/07/2024 09:56"/>
                </LinearLayout>
                <View style="@style/SoDivider"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingVertical="6dp">
                    <TextView
                        style="@style/SoInfoLabel"
                        android:text="Ngày sửa"/>
                    <TextView
                        android:id="@+id/tvNgaySua"
                        style="@style/SoInfoValue"
                        android:text="30/07/2024 09:56"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>

