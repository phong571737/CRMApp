                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:text="ÄH Ä‘Ã£ duyá»‡t"
                android:textColor="#1D4ED8"
                android:textSize="11sp"
                android:background="@drawable/chip_selected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingHorizontal="14dp"
                android:text="ÄH Ä‘Ã£ giao"
                android:textColor="@color/lead_not_choose"
                android:textSize="11sp"
                android:background="@drawable/chip_unselected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/chip_unselected"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:text="ÄH B2B"
                android:textColor="@color/lead_not_choose"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingHorizontal="11dp"
                android:text="ÄH Ä‘Ã£ huá»·"
                android:textColor="@color/lead_not_choose"
                android:textSize="11sp"
                android:background="@drawable/chip_unselected"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:gravity="center"
                android:paddingHorizontal="14dp"
                android:text="ÄH B2C"
                android:textColor="#4B5563"
                android:textSize="11sp"
                android:background="@drawable/chip_unselected"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Danh sÃ¡ch Ä‘Æ¡n hÃ ng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOrders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="16dp"
        android:background="@color/bg_lead"
        tools:listitem="@layout/item_order"
        app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ðŸ”¹ FAB dáº¥u cá»™ng á»Ÿ mÃ©p dÆ°á»›i bÃªn pháº£i -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/add"
        app:backgroundTint="@color/brand"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_24"
        app:tint="@android:color/white"
