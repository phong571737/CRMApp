<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".QuoteOverView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--Scheduled activities-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scheduled_action"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_action"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:padding="16dp"
                android:textSize="20sp"
                android:text="@string/scheduled_action"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/display_action"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_arrow_up"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/descript_action"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:background="@drawable/infor_bg">

                <ImageView
                    android:id="@+id/iv_meeting"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/project_plan"
                    android:contentDescription="@null"/>
                <TextView
                    android:id="@+id/tv_meeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họp demo quy trình CTKM"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/iv_meeting"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <ImageView
                    android:id="@+id/add_infor"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/dots"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@null"
                    app:tint="@color/blue"/>

                <ImageView
                    android:id="@+id/iv_dayandtime"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar"
                    app:layout_constraintTop_toBottomOf="@id/iv_meeting"
                    app:layout_constraintStart_toStartOf="parent"
                    android:contentDescription="@null"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_dayandtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:30-11:30 5/10/2025"
                    app:layout_constraintStart_toEndOf="@id/iv_dayandtime"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_meeting"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/tv_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/plan"
                    android:textColor="@color/blue"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/chipblue_bg"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_dayandtime"
                    android:layout_marginTop="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_comment"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_dayandtime"
                    app:layout_constraintStart_toEndOf="@id/tv_plan"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_comment"
                    app:tint="@color/blue"
                    android:contentDescription="@null"
                    />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/blue"
                    app:layout_constraintTop_toBottomOf="@id/iv_dayandtime"
                    app:layout_constraintStart_toEndOf="@id/iv_comment"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/descript_action"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/button_plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_add"
                    android:layout_margin="@dimen/margin_action"
                    app:layout_constraintEnd_toStartOf="@id/tv_plus"
                    android:contentDescription="@null"
                    app:tint="@color/active_add"
                    android:layout_marginBottom="@dimen/margin_action"
                    />

                <TextView
                    android:id="@+id/tv_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_action"
                    android:textColor="@color/active_add"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="@dimen/margin_action"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- End Scheduled activities-->

        <!--reference-->
        <LinearLayout
            android:id="@+id/ll_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/padding16"
            android:paddingEnd="@dimen/padding16"
            android:background="@color/white"
            android:layout_marginTop="@dimen/start_margin"
            app:layout_constraintTop_toBottomOf="@id/scheduled_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_document"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/title_documents"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <ImageView
                android:id="@+id/iv_document"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_arrow_up"
                android:layout_margin="@dimen/margin_action"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@null"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_reference"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/ll_reference"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            android:padding="@dimen/padding14">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingStart="@dimen/padding14"
                android:paddingEnd="@dimen/padding14">

                <!-- RecyclerView danh sách tài liệu -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_document"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"/>

                <!-- Hàng nút hành động -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:id="@+id/btn_select_document"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/ic_addfile"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chọn tài liệu"
                            android:textSize="15sp"
                            android:textColor="#2563EB"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_add_document"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:layout_marginStart="@dimen/padding36">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginEnd="6dp"
                            android:src="@drawable/upload"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thêm tài liệu"
                            android:textSize="15sp"
                            android:textColor="#2563EB"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    <!--End reference-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>