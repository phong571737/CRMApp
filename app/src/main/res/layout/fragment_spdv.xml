<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm/Dịch vụ"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#111827"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_invisible"
            android:showDividers="middle">

            <include layout="@layout/item_info_row_simple"
                android:id="@+id/rowRegion" />

            <include layout="@layout/item_info_row_simple"
                android:id="@+id/rowCurrency" />

            <include layout="@layout/item_info_row_simple"
                android:id="@+id/rowTaxType" />
            <!-- Phần sản phẩm -->
            <TextView
                android:text="Sản phẩm/Dịch vụ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent"
                android:layout_width="match_parent"/>

            <include layout="@layout/item_san_pham" android:id="@+id/itemCamAI" />
            <include layout="@layout/item_san_pham" android:id="@+id/itemCloudLead" />
            <!-- === Tổng kết (PHẢI NẰM Ở DƯỚI CÙNG) === -->
            <include layout="@layout/item_tong_ket_don_hang" android:id="@+id/layoutTongKet" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
