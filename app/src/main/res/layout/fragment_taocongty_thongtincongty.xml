<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- SECTION HEADER -->
        <LinearLayout
            android:id="@+id/layoutThongTinCongTy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/thong_tin_cong_ty"
                android:textStyle="bold"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/btnToggleThongTinCongTy"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_up"
                android:contentDescription="@string/toggle_section"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>

        <!-- FORM FIELDS -->
        <LinearLayout
            android:id="@+id/groupThongTinCongTy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên công ty -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/ten_cong_ty"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTenCongTy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:inputType="textPersonName"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Trạng thái -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/trang_thai"
                android:layout_marginBottom="15dp"
                app:endIconMode="dropdown_menu"
                android:background="@drawable/rounded_input_box">

                <AutoCompleteTextView
                    android:id="@+id/actTrangThai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Website -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/website"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textSize="16sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Điện thoại -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dien_thoai"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtDienThoai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textSize="16sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:layout_marginBottom="15dp"
                android:background="@drawable/rounded_input_box">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ngành nghề -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nganh_nghe"
                android:layout_marginBottom="15dp"
                app:endIconMode="dropdown_menu"
                android:background="@drawable/rounded_input_box">

                <AutoCompleteTextView
                    android:id="@+id/actNganhNghe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:textSize="16sp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
