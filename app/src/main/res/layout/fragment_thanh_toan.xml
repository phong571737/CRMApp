<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- =============== THÔNG TIN THANH TOÁN =============== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPaymentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thông tin thanh toán"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iconTogglePaymentInfo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <!-- Dòng: Phương thức thanh toán * -->
                <LinearLayout
                    android:id="@+id/rowPaymentMethod"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvPaymentMethod"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phương thức thanh toán *"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_down_24" />
                </LinearLayout>

                <!-- Dòng: Tình trạng thanh toán -->
                <LinearLayout
                    android:id="@+id/rowPaymentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tình trạng thanh toán"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_down_24" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========== THÔNG TIN THANH TOÁN ĐỊNH KỲ ========== -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecurringPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thông tin thanh toán định kỳ"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/iconToggleRecurring"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_expand_more" />
                </LinearLayout>

                <!-- Thời gian bắt đầu -->
                <LinearLayout
                    android:id="@+id/rowStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời gian bắt đầu"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar" />
                </LinearLayout>

                <!-- Thời gian kết thúc -->
                <LinearLayout
                    android:id="@+id/rowEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời gian kết thúc"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar" />
                </LinearLayout>

                <!-- Thời hạn thanh toán (dropdown) -->
                <LinearLayout
                    android:id="@+id/rowPaymentDue"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="12dp">

                    <TextView
                        android:id="@+id/tvPaymentDue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thời hạn thanh toán"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_down_24" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Nút + Thêm mới -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddRecurring"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="12dp"
            android:text="+ Thêm mới"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#2563EB"
            app:cornerRadius="999dp"
            app:strokeColor="#2563EB"
            app:strokeWidth="1dp"
            app:backgroundTint="@android:color/transparent" />

        <!-- Chừa khoảng trống cuối cho bottom buttons Hủy / Lưu của Activity -->
        <View
            android:layout_width="match_parent"
            android:layout_height="56dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
