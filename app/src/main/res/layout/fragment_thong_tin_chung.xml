<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin đơn hàng"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111827"
            android:layout_marginBottom="8dp"/>

        <!-- Container các hàng thông tin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider_invisible">

            <include layout="@layout/item_info_row" android:id="@+id/row_ma_don_hang"/>
            <include layout="@layout/item_info_row_multiline" android:id="@+id/row_tieu_de"/>
            <include layout="@layout/item_info_row_link" android:id="@+id/row_cong_ty"/>
            <include layout="@layout/item_info_row_link" android:id="@+id/row_nguoi_lien_he"/>
            <include layout="@layout/item_info_row" android:id="@+id/row_di_dong"/>
            <include layout="@layout/item_info_row" android:id="@+id/row_ngay_dat_hang"/>
            <include layout="@layout/item_info_row_status" android:id="@+id/row_tinh_trang"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

