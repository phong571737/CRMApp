<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Quote title-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_action"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/margin_action"
            android:layout_marginBottom="@dimen/margin_action"
            android:layout_marginEnd="@dimen/margin_action"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/arrow_back"
            />

        <TextView
            android:id="@+id/title_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quote_title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/text_name"
            android:layout_margin="@dimen/start_margin"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="@dimen/top_padding"
            android:paddingEnd="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--Search bar-->
    <LinearLayout
        android:id="@+id/ll_searchbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/cl_quote"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/start_margin"
        android:layout_marginEnd="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/search_bar_Quote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:backgroundTint="@color/bg_search"
            android:layout_marginStart="@dimen/start_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/filter_button">

            <!--Icon-->
            <ImageView
                android:id="@+id/iconSearch"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:contentDescription="@null"
                app:tint="@color/color_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!--Input search-->
            <EditText
                android:id="@+id/text_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="@string/search_quote"
                android:textColorHint="@color/lead_not_choose"
                android:background="@null"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iconSearch"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/filter_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_sliders"
            android:contentDescription="@string/desc_Search"
            android:background="@drawable/bg_filter"
            android:backgroundTint="@color/icon_search"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@id/search_bar_Quote"/>

    </LinearLayout>

    <!--Chip scroll-->
    <HorizontalScrollView
        android:id="@+id/chip_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_margin="@dimen/start_margin"
        app:layout_constraintTop_toBottomOf="@id/ll_searchbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/chip1"
                android:text="@string/all"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:textSize="11sp"
                android:backgroundTint="@color/icon_search"
                android:background="@drawable/bg_chip"
                android:textColor="@color/seemore_color"/>

            <TextView
                android:id="@+id/chip2"
                android:text="@string/yesterday_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_margin="5dp"
                android:background="@drawable/bg_chip"
                android:backgroundTint="@color/bg_search"
                android:textColor="@color/lead_not_choose"/>

            <TextView
                android:id="@+id/chip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_quote"
                android:layout_margin="5dp"
                android:textSize="11sp"
                android:backgroundTint="@color/bg_lead_15"
                android:textColor="@color/text_lead_15"
                android:background="@drawable/bg_chip"
                />


        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>