<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_gray"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        >

        <!--Name-->
        <LinearLayout
            android:id="@+id/ll_cus_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:foregroundGravity="center"
                android:src="@drawable/ic_user"
                android:contentDescription="@null"
                app:tint="@color/color_icon"
                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15.5sp"
                android:textStyle="bold"
                android:text="@string/cus_name" />

            <ImageView
                android:id="@+id/img_star"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_filled"
                app:tint="@color/yellow"
                app:layout_constraintEnd_toStartOf="@id/iv_dots"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_dots"
                android:contentDescription="@null"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/dots"
                android:foregroundGravity="center"
                app:tint="@color/gray_dark"
                />

        </LinearLayout>
        <!--end name-->

        <!--Company-->
        <LinearLayout
            android:id="@+id/ll_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_cus_name"
            >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/building"
                app:tint="@color/color_icon"
                />

            <TextView
                android:id="@+id/tv_Company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cus_Company"
                android:textSize="13sp" />

        </LinearLayout>
        <!--End company-->

        <!--job-->
        <LinearLayout
            android:id="@+id/ll_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_company"
            >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/categories"
                android:contentDescription="@null"
                app:tint="@color/color_icon"/>

            <TextView
                android:id="@+id/tv_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textStyle="normal"
                android:text="@string/job_infor"
                android:layout_marginStart="8dp"/>

            <ImageView
                android:id="@+id/iv_job"
                android:contentDescription="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/briefcase"
                app:tint="@color/color_icon" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Nhân viên kinh doanh"
                android:textSize="13sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <!-- End job-->

        <!--Day-->
        <LinearLayout
            android:id="@+id/ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_job"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@color/gray_dark" />

                <TextView
                    android:id="@+id/tv_Day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cus_Day"
                    android:textSize="13sp"
                    android:layout_marginStart="8dp"
                    />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_opportunity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã liên hệ"
                android:background="@drawable/bg_contacted"
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:textSize="12.5sp"
                android:textColor="@color/brown" />

        </LinearLayout>
        <!--End day-->

        <!--called and comments-->
        <LinearLayout
            android:id="@+id/layout_call_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/top_padding"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/ll_date"
            app:layout_constraintStart_toStartOf="parent">

            <!--Call-->
            <ImageView
                android:id="@+id/number_calls"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_call"
                app:tint="@color/blue_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"/>
            <!--End call-->

            <!--Comment-->
            <ImageView
                android:id="@+id/comments"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_comment_mess"
                android:layout_marginStart="16dp"
                app:tint="@color/blue_primary"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:layout_marginStart="6dp"/>
            <!--End comment-->

        </LinearLayout>
        <!--end called and comments-->

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/avatar_girl"
            android:background="@drawable/bg_circle_white"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/ll_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_divider"/>


        <!-- ĐƯỜNG NGĂN + NÚT TRAO ĐỔI -->
        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/layout_call_chat" />

        <TextView
            android:id="@+id/Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/cus_Contact"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            android:textColor="@color/seemore_color"
            app:layout_constraintTop_toBottomOf="@id/view_divider"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>