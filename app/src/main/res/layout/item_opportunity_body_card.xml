<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_opportunity_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="14dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/light_gray"
    android:backgroundTint="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp">

        <!-- ICON + TÊN + STAR + MENU -->
        <ImageView
            android:id="@+id/img_opportunity_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_target"
            app:tint="@color/blue_primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_opportunity_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Phần mềm CloudWork"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15.5sp"
            app:layout_constraintStart_toEndOf="@id/img_opportunity_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/img_star"
            app:layout_constraintHorizontal_bias="0"
            tools:text="Phần mềm CloudWork" />

        <ImageView
            android:id="@+id/img_star"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_star_filled"
            app:tint="@color/yellow"
            app:layout_constraintEnd_toStartOf="@id/img_menu"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more_vert"
            app:tint="@color/gray_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- GIÁ TIỀN -->
        <LinearLayout
            android:id="@+id/layout_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_opportunity_name"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_money"
                app:tint="@color/gray_dark" />

            <TextView
                android:id="@+id/tv_opportunity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14.875.000 đ"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <!-- NGÀY + CHIP -->
        <LinearLayout
            android:id="@+id/layout_date_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/layout_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calender_blue"
                    app:tint="@color/gray_dark" />

                <TextView
                    android:id="@+id/tv_opportunity_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="17/07/2024"
                    android:textSize="13sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_opportunity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thương lượng đàm phán"
                android:background="@drawable/bg_status_chip"
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:textSize="12.5sp"
                android:textColor="@color/brown" />
        </LinearLayout>

        <!-- CALL + CHAT ICON -->
        <LinearLayout
            android:id="@+id/layout_call_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout_date_row"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_call"
                app:tint="@color/blue_primary" />

            <TextView
                android:id="@+id/tv_call_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textColor="@color/black"
                android:layout_marginStart="6dp" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_mail"
                android:layout_marginStart="16dp"
                app:tint="@color/blue_primary" />

            <TextView
                android:id="@+id/tv_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/black"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- AVATAR NHÂN VIÊN -->
        <LinearLayout
            android:id="@+id/layout_avatar_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/layout_date_row"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_divider">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar_dog"
                android:background="@drawable/bg_circle_white"
                android:scaleType="centerCrop"
                android:layout_marginEnd="-8dp"
                android:clipToOutline="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar_man"
                android:background="@drawable/bg_circle_white"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_marginEnd="-8dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar_girl"
                android:background="@drawable/bg_circle_white"
                android:scaleType="centerCrop"
                android:clipToOutline="true" />
        </LinearLayout>

        <!-- ĐƯỜNG NGĂN + NÚT TRAO ĐỔI -->
        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/layout_call_chat" />

        <TextView
            android:id="@+id/tv_opportunity_exchange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trao đổi (1)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue_primary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintTop_toBottomOf="@id/view_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
