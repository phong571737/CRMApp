<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Nút quay lại -->
    <ImageView
        android:id="@+id/iv_opportunity_detail_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_back"
        android:layout_marginStart="8dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/tv_opportunity_detail_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Chi tiết cơ hội"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_vertical"/>

    <!-- Mũi tên trái -->
    <ImageView
        android:id="@+id/iv_opportunity_detail_left"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/arrow_back"
        android:background="@drawable/bg_status_chip"
        android:layout_marginEnd="8dp" />

    <!-- Mũi tên phải -->
    <ImageView
        android:id="@+id/iv_opportunity_detail_right"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_next"
        android:layout_marginEnd="8dp" />

    <!-- Nút chỉnh sửa -->
    <ImageView
        android:id="@+id/iv_opportunity_detail_edit"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_pencil"
        android:layout_marginEnd="8dp" />

    <!-- Nút mở thêm tùy chọn -->
    <ImageView
        android:id="@+id/iv_opportunity_detail_more"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_more" />

</LinearLayout>