<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Icon -->
        <ImageView
            android:id="@+id/imgFileType"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_file_icon"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pdf" />

        <!-- Nội dung -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Báo giá sản phẩm.pdf"
                android:textStyle="bold"
                android:textColor="#111827"
                android:textSize="15sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvFileTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17/05/2024 • 10:24"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvFileOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Minh Hà"
                android:textColor="#6B7280"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Nút hành động -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnDownload"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_download" />

            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_share" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_garbage" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
