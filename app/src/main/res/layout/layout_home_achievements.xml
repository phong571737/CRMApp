<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_large">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_home_achievements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Thành tích của tôi"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/margin_basex4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_more_achievements"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_more_achievements" />
    <!-- căn baseline chung với button -->

    <!-- Button "Tháng này" -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_more_achievements"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="Tháng này"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:insetLeft="12dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_list"
        app:iconGravity="end"
        app:iconPadding="6dp"
        app:iconTint="@color/black"
        app:strokeColor="@color/black"
        app:cornerRadius="50dp"
        app:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- RecyclerView horizontal -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_basex4"
        android:nestedScrollingEnabled="false"
        app:layout_constraintTop_toBottomOf="@id/tv_home_achievements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
