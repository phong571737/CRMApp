<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/homeHeader"
    android:layout_height="120dp">

    <!-- Nút back -->
    <ImageButton
        android:id="@+id/btn_home_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_back_ios"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <!-- Logo công ty -->
    <ImageView
        android:id="@+id/img_home_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toEndOf="@id/btn_home_back"
        app:layout_constraintTop_toTopOf="@id/btn_home_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_home_back"
        android:layout_marginStart="8dp" />

    <!-- Tiêu đề app -->
    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CLOUD GO"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/img_home_logo"
        app:layout_constraintEnd_toStartOf="@id/img_home_avatar"
        app:layout_constraintTop_toTopOf="@id/img_home_logo"
        app:layout_constraintBottom_toBottomOf="@id/img_home_logo" />

    <!-- Avatar -->
    <ImageView
        android:id="@+id/img_home_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_account_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_home_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_home_back"
        android:layout_marginEnd="16dp" />

    <!-- AI Assistant -->
    <ImageView
        android:id="@+id/img_home_ai"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_bug_report"
        app:layout_constraintEnd_toEndOf="@id/img_home_avatar"
        app:layout_constraintTop_toBottomOf="@id/img_home_avatar"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
