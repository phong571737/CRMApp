<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_management_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1"
    android:background="@color/white"
    android:padding="8dp">

    <!-- Người phụ trách -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv_responsible_person_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Người phụ trách"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_responsible_person_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nguyễn Minh Hà"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

    </TableRow>

    <!-- Người tạo -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv_creator_label_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Người tạo"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_creator_value_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nguyễn Minh Hà"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

    </TableRow>

    <!-- Ngày tạo -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv_created_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày tạo"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_created_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30/07/2024 09:56"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

    </TableRow>

    <!-- Ngày sửa -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv_modified_date_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngày sửa"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_modified_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30/07/2024 09:56"
            android:textSize="14sp"
            android:textColor="@color/text_primary" />

    </TableRow>

</TableLayout>