<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/gray_light">

    <TextView
        android:id="@+id/tab_overview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tab_overview"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_tab_active"
        android:textStyle="bold"
        android:textColor="@color/primary" />

    <TextView
        android:id="@+id/tab_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tab_details"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_tab_inactive"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tab_logs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tab_logs"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_tab_inactive"
        android:textColor="@color/text_secondary" />

    <TextView
        android:id="@+id/tab_activities"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/tab_activities"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="12dp"
        android:background="@drawable/bg_tab_inactive"
        android:textColor="@color/text_secondary" />

</LinearLayout>