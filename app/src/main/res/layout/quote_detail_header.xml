<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_back"
            android:contentDescription="@null"
            android:layout_margin="@dimen/margin_action"/>

        <TextView
            android:id="@+id/tv_DetailQuote"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_vertical"
            android:text="@string/quote_detail"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/margin_action"/>

        <ImageView
            android:id="@+id/left_Lead"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="@dimen/start_margin"
            android:src="@drawable/arrow_back"
            android:padding="@dimen/margin_icon"
            app:tint="@color/color_icon"
            android:background="@drawable/bg_icon"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/right_Lead"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:src="@drawable/ic_next"
            android:padding="@dimen/margin_icon"
            app:tint="@color/color_icon"
            android:background="@drawable/bg_icon"
            android:layout_margin="@dimen/start_margin"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/edit_detail"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:padding="@dimen/margin_icon"
            android:background="@drawable/bg_icon"
            app:tint="@color/color_icon"
            android:src="@drawable/ic_pencil"
            android:layout_margin="@dimen/start_margin"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/choose_active"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:padding="@dimen/margin_icon"
            android:background="@drawable/bg_icon"
            app:tint="@color/color_icon"
            android:src="@drawable/ic_more"
            android:layout_margin="@dimen/start_margin"
            android:contentDescription="@null"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_quote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_code"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="@dimen/start_margin"
                android:src="@drawable/paper"
                app:tint="@color/color_icon"
                android:contentDescription="@null"/>
            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/text_name"
                android:text="CODE"
                android:padding="@dimen/start_margin"/>
        </LinearLayout>

        <!--Detatail-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/start_margin"
            android:layout_marginEnd="@dimen/start_margin"
            android:layout_marginTop="@dimen/start_margin"
            android:layout_gravity="center_vertical">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <TextView
                android:id="@+id/tv_company"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CÃ´ng ty TNHH Hyosung Viet Nam"
                android:textColor="@color/seemore_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_center"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:gravity="start"
                android:layout_height="wrap_content"
                android:text="Dinh Phuong Nam"
                android:textColor="@color/seemore_color"
                app:layout_constraintStart_toStartOf="@id/guideline_center"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>