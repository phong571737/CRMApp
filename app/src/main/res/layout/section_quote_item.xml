<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/margin_action"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/ll_quote_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/margin_action">

        <TextView
            android:id="@+id/tv_section_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/quote_information"
            android:textStyle="bold"
            android:textSize="@dimen/text18"/>

        <ImageView
            android:id="@+id/iv_addinfor"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_up"
            android:contentDescription="@null" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_section_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_action"
        android:layout_marginEnd="@dimen/margin_action"/>


</LinearLayout>