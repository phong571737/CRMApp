<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_organization_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="8dp">

    <!-- Nút quay lại -->
    <ImageButton
        android:id="@+id/btn_organization_back"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_back"
        android:contentDescription="@string/cd_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Tiêu đề  -->
    <TextView
        android:id="@+id/tv_organization_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/organization_title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/btn_organization_back"
        app:layout_constraintTop_toTopOf="@id/btn_organization_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_organization_back" />

    <!-- Nút filter -->
    <ImageView
        android:id="@+id/img_organization_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_sliders"
        app:tint="#9E9E9E"
        android:contentDescription="@string/cd_filter_button"
        android:background="@drawable/chip_bg"
        android:backgroundTint="#F0F6FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/search_bar_organization" />

    <!-- Thanh tìm kiếm  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/search_bar_organization"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/chip_bg"
        android:backgroundTint="#F0F6FF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_organization_title"
        app:layout_constraintEnd_toStartOf="@id/img_organization_filter">

        <!-- Icon tìm kiếm -->
        <ImageView
            android:id="@+id/img_organization_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Ô nhập tìm kiếm  -->
        <EditText
            android:id="@+id/et_organization_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@null"
            android:hint="@string/organization_search_hint"
            android:paddingHorizontal="4dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/img_organization_search"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Dãy chip -->
    <HorizontalScrollView
        android:id="@+id/organization_chip_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/search_bar_organization"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Chip 1 -->
            <TextView
                android:id="@+id/tv_organization_chip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="@string/organization_chip_1"
                android:textColor="#9E9E9E"
                android:textSize="11sp"
                android:background="@drawable/chip_bg" />

            <!-- Chip 2 -->
            <TextView
                android:id="@+id/tv_organization_chip2"
                android:text="@string/organization_chip_2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="11sp"
                android:background="@drawable/chip_bg"
                android:backgroundTint="#F0F6FF"
                android:textColor="@color/blue"/>

            <!-- Chip 3 -->
            <TextView
                android:id="@+id/tv_organization_chip3"
                android:text="@string/organization_chip_3"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:textSize="11sp"
                android:background="@drawable/chip_bg"
                android:textColor="#9E9E9E"/>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>